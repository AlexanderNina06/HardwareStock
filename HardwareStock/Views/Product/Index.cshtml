@model List<ProductViewModel>
@{
    ViewData["Title"] = "Products";
}
<div class="container-fluid mt-4">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-outline-secondary">Crear nuevo producto</a>
        </div>
    </div>

    <div class="row">
        @foreach (ProductViewModel item in Model)
        {
            <div class="col-2">
                <div class="card shadow-sm text-white bg-primary">
                    <div class="card-header">@item.Name</div>
                    <div class="card-body">
                        <p class="card-text">Category: @item.CategoryName</p>
                        <p class="card-text">Price: $@item.Price</p>
                        <p class="card-text">Quantity: @item.Quantity</p>
                    </div>
                    <div class="btn-group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>