@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Products";
}
<div class="container-fluid mt-4">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-outline-secondary">Create new category</a>
        </div>
    </div>

    <div class="row">
        @foreach (CategoryViewModel item in Model)
        {
            <div class="col-3">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top img-product-size" src="@item.Image" />

                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                            <small class="fw-bold fs-6">Product Quantity: @item.ProductCount</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>